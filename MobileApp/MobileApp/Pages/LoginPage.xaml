<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Pages.LoginPage">
  <ContentPage.Content>
    <StackLayout Padding="20">
      <Label Text="ConsoleNotepad" FontSize="30" />
      <Label Text="Logowanie" FontSize="20" />
      <Entry Text="{Binding UserName, Mode=TwoWay}" Placeholder="Nazwa uzytkownika"/>
      <Entry Text="{Binding Password, Mode=TwoWay}" Placeholder="Hasło" IsPassword="True"/>
      <Label Text="{Binding Password}" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>