@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}
<style>
    body {
        /*background-image: url("../../images/winter.jpg");*/
        color: white;
    }
</style>

<div class="loginBoxContainer">
    <img class="bg" src="../../images/winter.jpg"/>
    <div class="loginBox">

        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="" role="form">
            <p><b>LOGOWANIE</b></p>
            <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>

            <div class="loginBoxPart">
                <input asp-for="Email" class="" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="loginBoxPart">
                <input asp-for="Password" class="" placeholder="Hasło" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="loginBoxPart">
                <input asp-for="RememberMe" />
                <label asp-for="RememberMe"></label>
            </div>

            <button type="submit" class="btn btn-default">Zaloguj</button>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
